{
  "name": "@coinspace/cs-cardano-wallet",
  "version": "0.0.5",
  "description": "Cardano Wallet for Coin app",
  "author": "Coin Crypto Wallet <support@coin.space> (https://coin.space/)",
  "license": "MIT",
  "main": "./index.js",
  "type": "module",
  "scripts": {
    "pretest": "node pretest.js",
    "build:asm": "node esbuild.config.js",
    "test": "mocha --experimental-wasm-modules",
    "test:asm": "mocha --disable-wasm",
    "lint": "eslint index.js esbuild.config.js pretest.js lib/*.js test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CoinSpace/cs-cardano-wallet.git"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^10.0.4",
    "@stricahq/bip32ed25519": "^1.0.3",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@emurgo/cardano-serialization-lib-asmjs": "^10.0.4",
    "esbuild": "^0.14.31",
    "esbuild-plugin-babel": "^0.2.3",
    "eslint": "^8.10.0",
    "eslint-config-coinspace": "^1.2.1",
    "mocha": "^9.2.2"
  },
  "eslintConfig": {
    "extends": [
      "coinspace"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "requireConfigFile": false,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "*.test.js",
          "test/*"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  }
}
